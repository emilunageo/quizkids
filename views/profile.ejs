<!doctype html>
<html lang="en">
  <head>
    <!-- required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Site Styles -->
    <link href="css/styleProfileScreen.css" rel="stylesheet">

    <title>Profile</title>

    <!-- Fonts, Kits and Bootstrap -->
    <%- include("partials/headers.ejs") %>
  </head>

  <!-- html body -->
  <body>
    <!-- navbar -->
    <%- include("partials/navbar.ejs") %>

    <!-- profile section -->
    <div class="container-fluid">
      <div class="row d-flex flex-wrap align-items-center">
        <div class="col-lg-6 col-md-5 col-12 text-center">
          <img src="../imgs/user-avatar.png" alt="user-avatar" class="avatar-picture img-fluid">
          <select class="form-select w-auto mx-auto mt-3 fw-bold" id="profilePicture" onchange="getPicture(this)">
            <option selected disabled class="fw-bold">Choose an avatar</option>
            <option value="./imgs/cat-avatar.png" class="fw-bold">Cat</option>
            <option value="./imgs/dog-avatar.png" class="fw-bold">Dog</option>
            <option value="./imgs/panda-avatar.png" class="fw-bold">Panda</option>
            <option value="./imgs/giraffe-avatar.png" class="fw-bold">Giraffe</option>
          </select>
        </div>
        <div class="col-lg-5 col-md-6 col-12 text-center mt-5">
          <p class="fw-bold py-3">First name</p>
          <p class="fw-bold py-3">Second name</p>
          <p class="fw-bold py-3">Email</p>
        </div>
      </div>
    </div>

    <!-- bootstrap js -->
    <script src="./scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>